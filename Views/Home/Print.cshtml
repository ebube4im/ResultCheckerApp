                <td>
                    @Html.DisplayNameFor(model => model.AdmissionNo) :
                    <strong>
                        @{ if (Model.Class == "JSS 1A" || Model.Class == "JSS 1B")
                            { <p> nothing </p> }

                            else
                            { @Html.DisplayFor(model => model.AdmissionNo);
                        } }
                    </strong>
                </td>

                <td>
                    @Html.DisplayNameFor(model => model.Gender)  : <strong> @Html.DisplayFor(model => model.Gender) </strong>
                </td>
                <td>
                    Session:  <strong>

                        @{
                            if (Model.Session == "2020")
                            {
                                ViewBag.Session = "2019/2020";
                            }
                            else if (Model.Session == "2021")
                            {
                                ViewBag.Session = "2020/2021";
                            }
                            else
                             if (Model.Session == "2022")
                            {
                                ViewBag.Session = "2021/2022";
                            }

                        }

                        @ViewBag.Session
                    </strong>
                </td>
            </tr>

            <tr>



                <td>@Html.DisplayNameFor(model => model.NoinClass)   : <strong> @Html.DisplayFor(model => model.NoinClass) </strong></td>


                @if (Model.Term == "Annual")
                {
                    <td>Annual Position :  <strong> @Html.DisplayFor(model => model.printAnnualViewModel.ANNUALPOSITION) </strong></td>

                    if (Model.printAnnualViewModel.Class == "JSS 1A" || Model.printAnnualViewModel.Class == "JSS 1B")
                    {
                        <td>Overall Position in JSS1 :  <strong> @Html.DisplayFor(model => model.printAnnualViewModel.OVERALLPOSITION) out of 69</strong></td>

                    }

                    if (Model.printAnnualViewModel.Class == "JSS 2A" || Model.printAnnualViewModel.Class == "JSS 2B")
