                &nbsp;&nbsp; | &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;


                @if (Model.Term == "Annual")
                {
                    @Html.DisplayNameFor(model => model.printAnnualViewModel.Average);
                    <strong> : @Html.DisplayFor(model => model.printAnnualViewModel.Average) &nbsp; &nbsp;  | &nbsp; &nbsp;  </strong>

                    <br />
                    @Html.DisplayNameFor(model => model.printAnnualViewModel.ANNUALPOSITION);
                    <strong> : @Html.DisplayFor(model => model.printAnnualViewModel.ANNUALPOSITION) &nbsp; &nbsp; | &nbsp; &nbsp; &nbsp; &nbsp;  </strong>

                    if (Model.printAnnualViewModel.Class == "JSS 1A" || Model.printAnnualViewModel.Class == "JSS 1B")
                    {
                        @Html.DisplayNameFor(model => model.printAnnualViewModel.OVERALLPOSITION);
                        <strong> : @Html.DisplayFor(model => model.printAnnualViewModel.OVERALLPOSITION) out of 69  </strong>

                    }
                    if (Model.printAnnualViewModel.Class == "JSS 2A" || Model.printAnnualViewModel.Class == "JSS 2B")
                    {
                        @Html.DisplayNameFor(model => model.printAnnualViewModel.OVERALLPOSITION);
                        <strong> : @Html.DisplayFor(model => model.printAnnualViewModel.OVERALLPOSITION) out of 65  </strong>


                    }
                }
                else
                {
                    @Html.DisplayNameFor(model => model.Average);
                    <strong> : @Html.DisplayFor(model => model.Average)       &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; | &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; </strong>
                    @Html.DisplayNameFor(model => model.Position); <strong> : @Html.DisplayFor(model => model.Position) </strong>


                }


            </td>
