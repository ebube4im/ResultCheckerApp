                        <td>Overall Position in JSS2 :  <strong> @Html.DisplayFor(model => model.printAnnualViewModel.OVERALLPOSITION) out of 65</strong></td>

                    }
                    //         <td>Overall Position in JSS1 :  <strong> @Html.DisplayFor(model => model.printAnnualViewModel.OVERALLPOSITION) out of 80</strong></td>
                }
                else
                {
                    <td>Position :  <strong> @Html.DisplayFor(model => model.Position) </strong></td>

                }

            </tr>
        </table>

    </div>



    <div class="row" style="margin-top:0px;">

        @if (Model.Term == "Annual")
        {
            @Html.Partial("_AnnualPView", Model.annualSubjects)
        }
        else
        {
            @Html.Partial("_ResultTable", Model.mySubjects)
        }



    </div>

    <table border="1" style="width:100%; margin-top:-20px" class="table mytable table-responsive table-striped mytable col-lg-12 col-sm-12 col-xs-12">

        @if (Model.Term == "Annual")
